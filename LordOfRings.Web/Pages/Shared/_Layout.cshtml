<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - A Forja dos Anéis</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#4A5568',
                        secondary: '#718096'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-100">
<header class="bg-gray-800 text-white shadow-lg">
    <nav class="container mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
            <div class="text-xl font-bold">
                <a asp-page="/Index">A Forja dos Anéis</a>
            </div>
            <div class="space-x-4">
                <a asp-page="/Index" class="hover:text-gray-300">Home</a>
                <a asp-page="/Aneis/Index" class="hover:text-gray-300">Anéis</a>
            </div>
        </div>
    </nav>
</header>

<main class="container mx-auto px-6 py-8">
    @RenderBody()
</main>

<footer class="bg-gray-800 text-white mt-8">
    <div class="container mx-auto px-6 py-4 text-center">
        &copy; 2024 - Senhor dos Anéis
    </div>
</footer>

<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>