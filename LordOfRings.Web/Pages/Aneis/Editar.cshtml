@page
@model LordOfRings.Web.Pages.Aneis.EditarModel
@{
    ViewData["Title"] = "Editar Anel";
}

<div class="container mx-auto max-w-2xl">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Editar Anel</h1>

    <form method="post" class="space-y-6">
        <input type="hidden" asp-for="Anel.Id" />
        
        <div>
            <label asp-for="Anel.Nome" class="block text-sm font-medium text-gray-700">Nome</label>
            <input asp-for="Anel.Nome" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" />
            <span asp-validation-for="Anel.Nome" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Anel.Poder" class="block text-sm font-medium text-gray-700">Poder</label>
            <textarea asp-for="Anel.Poder" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" rows="3"></textarea>
            <span asp-validation-for="Anel.Poder" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Anel.Portador" class="block text-sm font-medium text-gray-700">Portador</label>
            <select asp-for="Anel.Portador" asp-items="Model.Portadores" 
                    class="mt-1 block w-full rounded-md border-gray-300 shadow-sm">
                <option value="">Selecione um portador</option>
            </select>
            <span asp-validation-for="Anel.Portador" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Anel.ForjadoPor" class="block text-sm font-medium text-gray-700">Forjado Por</label>
            <input asp-for="Anel.ForjadoPor" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" />
            <span asp-validation-for="Anel.ForjadoPor" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Anel.Imagem" class="block text-sm font-medium text-gray-700">URL da Imagem</label>
            <input asp-for="Anel.Imagem" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm" />
            <span asp-validation-for="Anel.Imagem" class="text-red-600 text-sm"></span>
        </div>

        <div class="flex justify-end space-x-4">
            <a asp-page="./Index" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                Cancelar
            </a>
            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                Salvar
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}